{
	"name": "bedrock-ts",
	"version": "0.0.1",
	"description": "Create bedrock addons using TypeScript",
	"author": "ink0rr",
	"repository": {
		"type": "git",
		"url": "https://github.com/RedEagleStudios/bedrock-ts"
	},
	"license": "MIT",
	"main": "build/index.js",
	"types": "build/index.d.ts",
	"files": [
		"build"
	],
	"scripts": {
		"watch": "tsc -p tsconfig.json -w",
		"serve": "ts-node-dev --respawn --transpile-only --watch src src/main.ts",
