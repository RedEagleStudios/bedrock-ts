{
	"compilerOptions": {
		// required
		"allowSyntheticDefaultImports": true,
		"downlevelIteration": true,
		"esModuleInterop": true,
		"module": "commonjs",
		"moduleResolution": "Node",
		"forceConsistentCasingInFileNames": true,
		"strict": true,

		// configurable
		"rootDir": "src",
		"outDir": "out",
		"baseUrl": "src",
		"incremental": true,
		"tsBuildInfoFile": "out/tsconfig.tsbuildinfo",
	},
	"exclude": [
		"node_modules"
	]
}